-- -- -- -- -- Cr√©ation des tables SQL -- -- -- -- -- --
-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- --

DROP TABLE IF EXISTS POKEMON;
DROP TABLE IF EXISTS OWNER;
DROP TABLE IF EXISTS CENTRE_POKE;
DROP TABLE IF EXISTS JUGE;
DROP TABLE IF EXISTS ATTAQUE;
DROP TABLE IF EXISTS SOIGNE;

-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- --

CREATE TABLE POKEMON
(    NAME VARCHAR(20),
     TYPE1 VARCHAR(20),
     TYPE2 VARCHAR(20),
     BASEHP DECIMAL(3,0),
     ATTACK DECIMAL (3,0),
     DEFENSE DECIMAL (3,0),
     ATTACKSPECIAL DECIMAL (3,0),
     DEFENSESPECIAL DECIMAL (3,0),
     SPEED DECIMAL (3,0),
     CRI VARCHAR(20),
     OWNER_POKE VARCHAR(20),
     PV DECIMAL(3,0),
     XP DECIMAL (3,0),
     LEVEL DECIMAL (3,0)
);

CREATE TABLE OWNER
(    NOM_OWNER VARCHAR(20)
);

CREATE TABLE CENTRE_POKE
(    NOM_CENTRE VARCHAR(20)
);

CREATE TABLE JUGE
(    NOM_JUGE VARCHAR(20)
);

CREATE TABLE ATTAQUE
(    TYPE VARCHAR(20),
     POINTS_DEGAT DECIMAL(3,0),
     EXP_WIN DECIMAL(3,0),
     HEURE DATE
);

CREATE TABLE SOIGNE
(    POINTS_RECUP VARCHAR(20)
);


